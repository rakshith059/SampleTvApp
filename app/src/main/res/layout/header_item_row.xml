<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    android:elevation="@dimen/size_8dp"
    android:focusable="true"
    android:focusableInTouchMode="true"
    app:cardCornerRadius="@dimen/size_8dp">

    <!--<android.support.v17.leanback.widget.ImageCardView-->
    <!--android:id="@+id/header_tem_row_cv_image_card"-->
    <!--android:layout_width="@dimen/size_100dp"-->
    <!--android:layout_height="@dimen/size_100dp"-->
    <!--android:background="@color/cardview_dark_background"-->
    <!--android:focusable="true"-->
    <!--android:focusableInTouchMode="true" />-->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_8dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/header_item_row_iv_icon"
            android:layout_width="@dimen/size_150dp"
            android:layout_height="@dimen/size_100dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/header_item_row_tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_item_row_iv_icon" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>

